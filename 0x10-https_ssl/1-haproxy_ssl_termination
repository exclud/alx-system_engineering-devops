global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon
    # Default SSL material locations
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend www-ssl
    bind *:443 ssl crt /etc/haproxy/www.shammah.tech.pem
    mode http
    default_backend web_servers

backend web_servers
    balance roundrobin
    server web01 54.157.176.235:80 check
    server web02 54.144.223.110:80 check
